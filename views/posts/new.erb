<div class="card">
  <div class="card-header">
    <form action= '/posts/new' method='POST'>
      <div class="form-group row" id="titlepost">
        <label for="title" class="col-sm-2 col-form-label" name='title' id="titletag">Title</label>
        <div class="col-sm-10">
          <input type="title" class="form-control" name='title' placeholder="Title">
        </div>
      </div>
      <div class="form-group row" id="usernametag">
        <label for="username" class="col-sm-2 col-form-label" id="nametag">Username</label>
        <div class="col-sm-10">
          <input type="username" class="form-control"  name="username" placeholder="Username">
        </div>
      </div>
      <div class="form-group" id="messagebox" id="box">
        <label for="content">Share Your Thoughts!</label>
        <textarea class="form-control" name='content' rows="3"></textarea>
      </div>
      <div class="form-group row" id="sharebutton">
        <div class="col-sm-10">
          <button type="submit" class="btn btn-primary">Share</button>
        </div>
      </div>
    </form>
  </div>
  <div class="card-body">
  </div>
