<style>
textarea.form-control {
    
    margin-left: 57%;
    width: 400px;
    height: 150px;

}
.card {
    margin-left: 20%;
    margin-right: 20%;
    margin-top: 5%;
}

#update {
    margin-left: 75%
}
</style>




<div class="card">
  <div class="card-header">
    <form method="post" action="/posts/<%= @post.id %>"> 
    <input type="hidden" name="_method" value="put">

      <div class="form-group row" id="titlepost">
        <label for="title" class="col-sm-2 col-form-label" name='title' id="titletag">Title</label>
        <div class="col-sm-10">
          <input type="text" class="form-control" name='title' value="<%= @post.title %>">
        </div>

      <div class="form-group" id="messagebox" id="box">
        <label for="content">Edit Post</label>
        <textarea class="form-control" name='content' rows="3" value="<%= @post.content %>"></textarea>
      </div>
      <div class="form-group row" id="update">
        <div class="col-sm-10">
        <button type="submit" class="btn btn-light">Update Post</button>
        
        </div>
      </div>
    </form>
  </div>
  <div class="card-body">
  </div>
</div>